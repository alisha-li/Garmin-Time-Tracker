<layout id="MainLayout">
    <label
        id="clock"
        text="CLOCK"
        x="26%"
        y="20%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />

    <label
        id="date"
        text="DATE"
        x="75%"
        y="20%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="stopwatch"
        text="TIME"
        x="center"
        y="center"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="heartrate"
        text="HEART"
        x="26%"
        y="70%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="calories"
        text="CAL"
        x="75%"
        y="70%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />

    
